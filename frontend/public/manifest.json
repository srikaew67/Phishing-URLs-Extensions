{
  "manifest_version": 3,
  "name": "Phishing URLs Detection",
  "version": "1.0",
  "description": "Scan URLs on the current page or input a URL to check for phishing.",
  "permissions": ["tabs", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
